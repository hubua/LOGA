@using LOGA.WebUI
@using LOGA.WebUI.Models
@model Dictionary<char, LOGA.WebUI.Models.GeorgianLetter>

@{
    ViewBag.Title = "ქართული ანბანი";

    int progressLId = HttpContextStorage.GetUserLearnProgressLId(Context);
    if (!GeorgianABC.IsValidLearnIndex(progressLId))
    {
        progressLId = 1;
    }
    var progressLetter = GeorgianABC.GetLetterByLearnIndex(progressLId);
    string btnText = progressLId == 1 ? "დავიწყოთ სწავლა" : $"გავარძელოთ სწავლა (ასო \"{progressLetter.Mxedruli}\"-დან)";
}

<div class="page-header">
    <h2>სწავლა <small>ქართული ანბანი</small></h2>
</div>

<div class="panel panel-default" style="padding: 30px;">
    @Html.ActionLink(btnText, "Letter", "Learn", new { lid = progressLId }, new { @class = "btn btn-info btn-lg" })
</div>

<ul class="nav nav-tabs" role="tablist">
    <li role="presentation" class="active">
        <a href="#tabOrderDE" aria-controls="tabOrderDE" role="tab" data-toggle="tab">დედა ენის მიმდევრობა (ი, ა, თ...)</a>
    </li>
    <li role="presentation">
        <a href="#tabOrderABC" aria-controls="tabOrderABC" role="tab" data-toggle="tab">ანბანის მიმდევრობა (ა, ბ, გ...)</a>
    </li>
</ul>

<div class="tab-content">
    <div role="tabpanel" class="tab-pane fade in active" id="tabOrderDE">
        @Html.Partial("_LettersListPartial", Model.Values.OrderBy(item => item.LearnOrder))
    </div>
    <div role="tabpanel" class="tab-pane" id="tabOrderABC">
        @Html.Partial("_LettersListPartial", Model.Values)
    </div>
</div>