@using LOGA.WebUI
@using LOGA.WebUI.Models
@model Dictionary<char, LOGA.WebUI.Models.GeorgianLetter>

@{
    ViewBag.Title = "ქართული ანბანი";

    int progressLId = HttpContextStorage.GetUserLearnProgressLId(Context);
    if (!GeorgianABC.IsValidLearnIndex(progressLId))
    {
        progressLId = 1;
    }
    var progressLetter = GeorgianABC.GetLetterByLearnIndex(progressLId);
    string btnText = progressLId == 1 ? "დავიწყოთ სწავლა" : $"გავარძელოთ სწავლა (ასო \"{progressLetter.Mxedruli}\"-დან)";
}

<div class="page-header">
    <h2>სწავლა <small>ქართული ანბანი</small></h2>
</div>


<div class="panel panel-default" style="padding: 30px;">
    @Html.ActionLink(btnText, "Letter", "Learn", new { lid = progressLId }, new { @class = "btn btn-info btn-lg" })
</div>

<div class="h4">
    <table class="table text-center table-bordered">
        <tr>
            <th>სახელი</th>
            <th>მხედრული</th>
            <th>ასომთავრული</th>
            <th>ნუსხური</th>
            <th>რიცხვითი მნიშვნელობა</th>
        </tr>
        @foreach (var item in @Model)
        {
            <tr>
                <td><a href='@Url.Action("Letter", "Learn", new { lid = @item.Value.LearnOrder })' data-toggle="tooltip" title="გავაგრძელოთ აქედან">@item.Value.LetterName</a></td>
                <td>@(String.IsNullOrEmpty(item.Value.ReadAs) ? item.Value.Mxedruli : $"{item.Value.Mxedruli} ({item.Value.ReadAs})")</td>
                <td>@item.Value.Asomtavruli</td>
                <td>@item.Value.Nuskhuru</td>
                <td>@item.Value.NumberEquivalent</td>
            </tr>

        }
    </table>
</div>