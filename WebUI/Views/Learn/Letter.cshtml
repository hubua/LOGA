@model LOGA.WebUI.Models.GeorgianLetter

@{
    ViewBag.Title = "სწავლა";

    int nextLetterLId = LOGA.WebUI.Models.GeorgianABC.GetNextLetterLearnIndex(Model.LearnOrder);
    int prevLetterLId = LOGA.WebUI.Models.GeorgianABC.GetNextLetterLearnIndex(Model.LearnOrder, true);
}

<div class="page-header">
    <h2>სწავლა <small>დაიმახსოვრეთ დამწერლობა</small></h2>
</div>

<table class="table text-center table-bordered auto-width">
    <colgroup>
        <col style="width: 25%; background-color: lightgray" />
        <col style="width: 25%" />
        <col style="width: 25%" />
        <col style="width: 25%" />
    </colgroup>
    <tr>
        <td><strong>ასო</strong></td>
        <td>ასომთავრული</td>
        <td>ნუსხური</td>
        <td>რიცხვი</td>
    </tr>
    <tr class="h1 geo-font">
        <td>@(String.IsNullOrEmpty(Model.ReadAs) ? Model.Mxedruli : $"{Model.Mxedruli} ({Model.ReadAs})")</td>
        <td>@Model.Asomtavruli</td>
        <td>@Model.Nuskhuru</td>
        <td>@Model.NumberEquivalent</td>
    </tr>
</table>

@if (Model.Words.Count() > 0)
{
    @Html.ActionLink("შევამოწმოთ ცოდნა", "Translate", "Learn", new { lid = Model.LearnOrder }, new { @class = "btn btn-primary btn-lg", id = "default-focus-a" })
}

@Html.ActionLink("დავიმახსოვრე, შემდეგი", "Letter", "Learn", new { lid = nextLetterLId }, new { @class = "btn btn-info btn-lg" })

@if (Model.LearnOrder != 1)
{
    @Html.ActionLink("წინა", "Letter", "Learn", new { lid = prevLetterLId }, new { @class = "btn btn-default btn-lg" })
}
