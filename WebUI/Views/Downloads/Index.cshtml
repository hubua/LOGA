
@{
    ViewBag.Title = "სასარგებლო მასალა";
}

<div class="page-header">
    <h2>სასარგებლო მასალა <small>ამოსაბეჭდად</small> </h2>
</div>

<div>

    @{
        var pdfs = new Dictionary<string, string>()
        {
            { "anbani.pdf", "ქართული ანბანი ამოსაბეჭდი (სრული)" },
            { "anbani1.pdf", "ქართული ანბანი ამოსაბეჭდი (პირველი გვერდი)" },
            { "anbani2.pdf", "ქართული ანბანი ამოსაბეჭდი (მეორე გვერდი)" },
            { "qaragmebi.pdf", "ქარაგმების გახსნა" },
            { "locvebi.pdf", "დილისა და ძილად მისვლის ლოცვები (ხუცურად)" },
            { "anbani-targmanit.pdf", "რუსულ-ქართული და ბერძნულ-ქართული შესატყვისი ანბანში" },
        };
    }

    <table class="table table-hover auto-width">
        <tr>
            <th colspan="2" style="border: none">ჩამოტვირთეთ</th>
        </tr>
        @foreach (var item in pdfs)
        {
            <tr>
                <td><a href="~/Download/@item.Key"><img src="~/Content/img/Adobe_PDF_file_icon_32x32.png" /></a></td>
                <td><a href="~/Download/@item.Key">@item.Value</a></td>
            </tr>
        }
        <tfoot>
            <tr>
                <th colspan="2">
                    <span class="text-muted small">აღებულია საიტიდან
                        <a class="text-muted" href="http://martlmadidebloba.ge/ganmarteba19.html" target="_blank">http://martlmadidebloba.ge/ganmarteba19.html</a>
                    </span>
                </th>
            </tr>
        </tfoot>
    </table>
</div>

<div>
    <div style="padding-bottom: 3px">"pdf" ფორმატის ფაილების სანახავად საჭიროა გქონდეთ Adobe Acrobat Reader</div>
