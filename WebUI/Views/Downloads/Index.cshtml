@using LOGA.WebUI.Models
@{
    ViewBag.Title = "სასარგებლო მასალა";
}

<div class="page-header">
    <h2>სასარგებლო მასალა <small>ამოსაბეჭდად</small> </h2>
</div>

<div>
    @{
        var pdfs = new Dictionary<string, string>()
        {
            { "anbani.pdf", "ქართული ანბანი ამოსაბეჭდი (სრული)" },
            { "anbani1.pdf", "ქართული ანბანი ამოსაბეჭდი (პირველი გვერდი)" },
            { "anbani2.pdf", "ქართული ანბანი ამოსაბეჭდი (მეორე გვერდი)" },
            { "qaragmebi.pdf", "ქარაგმების გახსნა" },
            { "locvebi.pdf", "დილისა და ძილად მისვლის ლოცვები (ხუცურად)" },
            { "anbani-targmanit.pdf", "რუსულ-ქართული და ბერძნულ-ქართული შესატყვისი ანბანში" },
        };
    }

    <table class="table table-hover auto-width">
        <tr>
            <th colspan="2" style="border: none">ჩამოტვირთეთ</th>
        </tr>
        @foreach (var item in pdfs)
        {
            <tr>
                <td><a href="~/Download/@item.Key"><img src="~/Content/img/Adobe_PDF_file_icon_32x32.png" /></a></td>
                <td><a href="~/Download/@item.Key">@item.Value</a></td>
            </tr>
        }
        <tfoot>
            <tr>
                <th colspan="2">
                    <span class="text-muted small">
                        აღებულია საიტიდან
                        <a class="text-muted" href="http://martlmadidebloba.ge/ganmarteba19.html" target="_blank">http://martlmadidebloba.ge/ganmarteba19.html</a>
                    </span>
                </th>
            </tr>
        </tfoot>
    </table>
</div>

<div>
    @{
        var links = new List<Tuple<string, string, string>>()
        {
            Tuple.Create("https://ka.wikipedia.org/wiki/ქართული_დამწერლობა", "ქართული დამწერლობა", "(სტატია ვიკიპედიაში)"),
            Tuple.Create("https://ka.wikipedia.org/wiki/მხედრული", "მხედრული", "(სტატია ვიკიპედიაში)"),
            Tuple.Create("http://www.ambioni.ge/qartuli-damwerloba", "ქართული დამწერლობა", "(სტატია \"ამბიონზე\")"),
            Tuple.Create("http://www.fluentin3months.com/phonetic-script-can-be-learned-quickly/", "როგორ ვისწავლოთ ანბანი სწრაფად", "(საინტერესო ინგლისური სტატია. იქნემ ვინმემ შეძლოს გადათარგმნოს ქართულად?)"),
            //{ "http://www.memrise.com/home/", "" },
            Tuple.Create("", "", "") // To render a horizontal separator line
        };
    }

    <table class="table table-hover auto-width">
        <tr>
            <th style="border: none">სასარგებლო ბმულები</th>
        </tr>
        @foreach (var item in links)
        {
            <tr>
                <td>
                    <a href="@item.Item1" target="_blank" title="@item.Item1">@item.Item2</a> @item.Item3
                </td>
            </tr>
        }
    </table>
</div>


<div>
    <div style="padding-bottom: 3px">"pdf" ფორმატის ფაილების სანახავად საჭიროა გქონდეთ Adobe Acrobat Reader</div>
    <a href="https://get.adobe.com/reader/">
        <img src="~/Content/img/Get_Adobe_Acrobat_Reader_DC_web_button_158x39.fw.png" />
    </a>
</div>



