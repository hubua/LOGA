@model LOGA.WebUI.Models.UserSettings

@* To persist all settings fields  *@
@Html.HiddenFor(m => m.SavedLearnProgressLId)

<script>
    function clearForm() {
        $("#tbDisplayName").val('');
        $("#cbLearnAsomtavruli").prop('checked', false);
    }
</script>

<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <h4>პარამეტრები</h4>
        </div>
        <div class="modal-body">

            <div class="form-group">
                <div class="checkbox">
                    <label>
                        @Html.CheckBoxFor(m => m.LearnAsomtavruli, new { id = "cbLearnAsomtavruli" }) <strong>ვისწავლოთ ასომთავრული</strong>
                    </label>
                    <p class="help-block">
                        ნუსხურთან ერთად სასწავლებლად გეძლევათ ასომთავრულიც (დიდი ასოები)
                    </p>
                </div>
            </div>

            <div class="form-group">
                <div class="checkbox">
                    <label>
                        @Html.CheckBoxFor(m => m.SaveLearnProgress, new { id = "cbSaveLearnProgress" }) <strong>პროგრესის დამახსოვრება</strong>
                    </label>
                    <p class="help-block">
                        შემდეგ შემოსვლაზე გააგრძელებთ ბოლო ნასწავლი ასოდან
                    </p>
                </div>
            </div>

        </div>
        <div class="modal-footer">
            <p class="text-left help-block">
                <small>
                    მითითებული პარამეტრები იქნება დამახსოვრებული თქვენს კომპიუტერში cookie-ში
                </small>
            </p>
            <span class="load" style="display: none; padding-right: 10px" id="lblSaveInProgress">გთხოვთ დაელოდოთ...</span>
            <button type="submit" class="btn btn-primary" id="btnSaveUserSettings" value="Save">დამახსოვრება</button>
            <button type="button" class="btn btn-default" data-dismiss="modal">დახურვა</button>
        </div>
    </div>
</div>
